    "fbgraph": "^1.4.1",
    "lodash": "^4.17.5",
    "lusca": "^1.5.2",
    "method-override": "^3.0.0",
    "mocha": "^6.0.2",
    "mongoose": "^4.13.18",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.16",
    "pug": "^2.0.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sinon": "^7.2.5",
