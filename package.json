{
  "name": "scottish-power-mock-soap-api",
  "version": "0.1.0",
  "description": "Mock SOAP API for Scottish Power Prepayments and Reversals",
  "repository": {
    "type": "git",
    "url": "https://payzone.co.uk"
  },
  "author": "Payzone Bill Payments UK",
